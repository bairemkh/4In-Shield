<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:maxWidth="500dp"
        android:maxHeight="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shield" />

    <TextView
        android:id="@+id/welcome_joh"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:alpha="0.86"
        android:gravity="top"
        android:lineSpacingExtra="2sp"
        android:text="@string/welcome_joh"
        android:textAppearance="@style/welcome_joh"
        android:translationY="-0.98sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_style"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_joh"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In with Email"
            android:layout_centerVertical="true"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/tv_desc"
            android:src="@drawable/icons_mail" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/img1"
            android:src="@drawable/forwardarrow" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_style"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sign In with Gmail"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/img1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/tv_desc2"
            android:src="@drawable/googleicon" />

        <ImageView
            android:id="@+id/img2_2"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="97dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/img1_2"
            android:src="@drawable/forwardarrow" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_style"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sign In with Facebok"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/img1_3"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/tv_desc3"
            android:src="@drawable/icons_facebook" />

        <ImageView
            android:id="@+id/img2_3"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/img1_3"
            android:src="@drawable/forwardarrow" />


    </RelativeLayout>

    <TextView
        android:id="@+id/no_account_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="241dp"
        android:alpha="0.86"
        android:textSize="18sp"
        android:fontFamily="@font/abel"
        android:gravity="top"
        android:lineSpacingExtra="2sp"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:translationY="-1.03sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container3" />


</android.support.constraint.ConstraintLayout>